!!! 5
%html
  %head
    %link{rel:'stylesheet', type: 'text/css', href:'/css/main.css'}
    %link{rel:"stylesheet", href:"//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", type: "text/css"}
    %meta{name: 'viewport', content:'width=device-width, initial-scale=1.0'}
    %script{src:'/js/jquery.js'}
    %title Montevideo Bicis
  %body
    #container
      %header
        .navbar.nabvar-inversed.nabvar-fixed-top
          .navbar-inner
            .container
              .row
                .span5.page-header
                  %h1 Montevideo Bicis
                .span4.offset7
                  %ul.nav.nav-tabs.nav-justified
                    %li{current_page == "home" ? {class: "active"} : {}}
                      %a{href: "/"}
                        Home
                    %li{current_page == "data" ? {class: "active"} : {}}
                      %a{href: "/data"}
                        Data
                    %li{current_page == "leyes" ? {class: "active"} : {}}
                      %a{href: "/leyes"}
                        Leyes
                    %li{current_page == "participar" ? {class: "active"} : {}}
                      %a{href: "/participar"}
                        Participar

      .container
        = yield